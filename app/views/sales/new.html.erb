<%= form_with model: @sale, local: true do |f| %>
	<%= f.label :cod, "Código de la venta"%>
	<%= f.number_field :cod %>

	<%= f.label :detail, "Detalle de la venta"%>
	<%= f.text_area :detail %>

	<%= f.label :category, "Categoría de la venta"%>
	<%= f.text_field :category %>

	<%= f.label :value, "Valor de la venta"%>
	<%= f.number_field :value %>

	<%= f.label :discount, "'%' de descuento aplicado de 1 a 100"%>
	<%= f.number_field :discount %>

	<%= f.label :tax, "Exento de IVA"%>
	<%= f.check_box :tax %>
	
	<%= f.submit "Registrar" %>
<% end %>